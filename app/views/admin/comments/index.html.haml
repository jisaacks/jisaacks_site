#admin
  .articles
    %h1 All Comments
    %table
      %thead
        %tr
          %th Name
          %th On Article
          %th Action
      %tbody
        - @comments.each do |c|
          %tr
            %td= c.name
            %td{:width => '400'}= c.article.title
            %td
              = link_to "Edit", edit_admin_comment_path(c), :class => 'btn'
              = link_to "Delete", admin_comment_path(c), :method => :delete, :class => 'btn btn-danger', :confirm => "Delete?"
  .right= render :partial => 'admin/sidebar'