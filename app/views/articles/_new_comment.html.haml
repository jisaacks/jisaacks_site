%h3 Leave A Comment
= form_for comment, :url => comment_article_path(article) do |f|
  %div
    = f.label :name
    = f.text_field :name
  %div
    = f.label :email
    = f.text_field :email
  .phone
    %label Phone
    %input{:type => :text, :name => :phone}
  %div
    = f.label :website
    = f.text_field :website
  %div
    = f.label :spam_math, "What is 3 plus 4?"
    = f.text_field :spam_math
  %div
    = f.label :comment
    = f.text_area :comment, :rows => 10
  %div
    = f.submit "Submit Comment", :class => 'btn'